<h1>Book</h1>

<%= flash[:notice] %>

<table>
  <thread>
    <tr>title</tr>
    <tr>body</tr>
    <tr colspan="3"></tr>
  </thread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "Show", book_path(book) %></th>
      <th><%= link_to "Edit", edit_book_path(book) %></th>
      <th><%= link_to "Destroy", book_path(book),method: :delete,data: { confirm: 'Are you sure?' } %></th>
    </tr>
    <% end %>
  </tbody>
</table>


ã€€<% if @book.errors.any? %>
   <div class="error_explanation" >
    <h3> error<%= @book.errors.count %></h3>
      <% @book.errors.full_messages.each do |message| %>
       <%= message %>
      <% end %>
   </div>
  <% end %>

<h1>New book</h1>
  <%= form_with model:@book,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>